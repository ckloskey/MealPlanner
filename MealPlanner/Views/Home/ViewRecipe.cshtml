@model MealPlanner.Models.Recipe

@{
    ViewBag.Title = "ViewRecipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewRecipe</h2>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.HiddenFor(model => model.apiId)
        </dt>

        <dd>
            @Html.HiddenFor(model => model.apiId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt class="center-block">
            <img src="@Html.DisplayFor(model => model.image)">
        </dt>

        <dd>
            @Html.DisplayFor(model => model.image)
        </dd>

        @foreach (var item in Model.RecipeSteps)
         {

        <dt class="col-md-2">
            @Html.DisplayNameFor(model => item.number)
        </dt>

        <p class="col-md-10">
            @Html.DisplayFor(modelItem => item.step)
        </p>
         }
    </dl>
</div>
<p>
    @Html.ActionLink("Back", "Index")
</p>
